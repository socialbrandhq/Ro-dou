# Ro-dou Environment Variables for Coolify Deployment
# Copy this file to .env and customize the values for your deployment

# ==========================================
# AIRFLOW CORE CONFIGURATION
# ==========================================

# Database Configuration
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres:5432/airflow

# Executor Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Security Configuration
AIRFLOW__CORE__FERNET_KEY=Uqv6pwYWJn7xifR3QAkifMTkupos8mkxaQL2Q7Ydsqw=
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-here

# Timezone Configuration
AIRFLOW__CORE__DEFAULT_TIMEZONE=America/Sao_Paulo
AIRFLOW__WEBSERVER__DEFAULT_UI_TIMEZONE=America/Sao_Paulo

# DAG Configuration
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__CORE__ENABLE_XCOM_PICKLING=true

# Authentication
AIRFLOW__API__AUTH_BACKEND=airflow.api.auth.backend.basic_auth

# Email Configuration
AIRFLOW__EMAIL__DEFAULT_EMAIL_ON_FAILURE=false
AIRFLOW__EMAIL__DEFAULT_EMAIL_ON_RETRY=false

# Webserver Configuration
AIRFLOW__WEBSERVER__WORKERS=1

# ==========================================
# AIRFLOW INITIALIZATION
# ==========================================

_AIRFLOW_DB_UPGRADE=true
_AIRFLOW_WWW_USER_CREATE=true
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# ==========================================
# SMTP CONFIGURATION
# ==========================================

AIRFLOW__SMTP__SMTP_HOST=smtp4dev
AIRFLOW__SMTP__SMTP_MAIL_FROM=airflow@yourdomain.com
AIRFLOW__SMTP__SMTP_PORT=2525
AIRFLOW__SMTP__SMTP_STARTTLS=false
# AIRFLOW__SMTP__SMTP_USER=your-smtp-username
# AIRFLOW__SMTP__SMTP_PASSWORD=your-smtp-password

# ==========================================
# RO-DOU SPECIFIC CONFIGURATION
# ==========================================

RO_DOU__DAG_CONF_DIR=/opt/airflow/dags/ro_dou/dag_confs

# ==========================================
# INLABS PORTAL CREDENTIALS
# ==========================================
# IMPORTANT: Update these with your actual credentials

INLABS_PORTAL_LOGIN=user@email.com
INLABS_PORTAL_PASSWORD=password

# ==========================================
# DOCKER USER CONFIGURATION
# ==========================================

AIRFLOW_UID=50000

# ==========================================
# COOLIFY SPECIFIC VARIABLES
# ==========================================

# Set this to your domain when deploying to Coolify
APP_DOMAIN=your-app-domain.com

# Set to 'production' for production deployment
ENVIRONMENT=production